{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2020",
    "module": "ES2022",
    "lib": ["dom", "ES2020"],
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationDir": "dist/dts",
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["types-base", "@types/jest"],
    "baseUrl": "../",
    "paths": {}
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "declarations.d.ts"],
  "exclude": ["src/**.*.spec.tsx"]
}
